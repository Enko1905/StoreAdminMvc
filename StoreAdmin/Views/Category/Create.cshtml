@model Categories

<div class="row d-flex justify-content-center align-items-center">
    <div class="col-lg-6 col-md-8 col-sm-10 col-12">
        <div class="p-3 border bg-light">

            <form asp-controller="Category" asp-action="Create">
                <div class="mb-3">
                    <label for="Kategori" class="form-label">Ana Kategori</label>
                    <select class="form-control" asp-for="MainCategoryId" asp-items="@ViewBag.MainCategory">
                    </select>
                    <label for="Kategori" class="form-label">Kategori Adı</label>
                    <input type="text" name="name" class="form-control" id="Kategori">
                   
                </div>
                <div class="btn-group">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a type="submit" asp-action="Index" asp-controller="Category" class="btn btn-outline-primary">İptal</a>
                </div>
              
            </form>

        </div>
    </div>
</div>