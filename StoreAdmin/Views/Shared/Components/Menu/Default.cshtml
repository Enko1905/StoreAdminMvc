@model List<MainCategory>


<!-- Basic -->
@foreach (var mainCtgr in Model)
{
    <li class="dropdown dropdown-slide">
        <a href="#!" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="350"
           role="button" aria-haspopup="true" aria-expanded="false">
            @mainCtgr.Name <span class="tf-ion-ios-arrow-down"></span>
        </a>
        <div class="dropdown-menu">
            <div class="row">
                @foreach (var categr in mainCtgr.Category)
                {
                    <div class="col-lg-8 col-md-6 mb-sm-3">
                        <ul>
                            <li class="dropdown-header"><a href="shop.html">@categr.Name</a></li>
                            <li role="separator" class="divider"></li>
                            @foreach (var subCatgr in categr.SubCategories)
                            {
                                <li><a href="shop.html"> @subCatgr.Name</a></li>
                            }
                        </ul>
                    </div>
                    <!-- Layout -->
                 
                }
            </div>

            <!-- / .row -->
        </div>

        <!-- / .dropdown-menu -->
    </li>

    <!-- / Elements -->
}


