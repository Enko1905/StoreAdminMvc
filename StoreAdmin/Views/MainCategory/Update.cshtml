@model MainCategory

<div class="row d-flex justify-content-center align-items-center">
    <div class="col-lg-6 col-md-8 col-sm-10 col-12">
        <div class="p-3 border bg-light">

            <form asp-controller="MainCategory" asp-action="Update" method="post">
                <div class="mb-3">
                    @Html.HiddenFor(x => x.MainCategoryId)
                    <label for="Kategori" class="form-label">Ana Kategori Adı</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

                </div>
                <div class="btn-group">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a class="btn btn-outline-primary" type="submit" asp-action="Index" asp-controller="MainCategory" asp-route-id="@Model.MainCategoryId">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>